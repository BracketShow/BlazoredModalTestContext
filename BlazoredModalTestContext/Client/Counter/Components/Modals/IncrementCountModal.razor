<EditForm class="simple-form" Model="increment" OnValidSubmit="SubmitOnValidFormAsync">
    <div class="form-group">
        <label for="increment">Increment count by</label>
        <InputNumber @bind-Value="increment" class="form-control default-font-size" />
    </div>
    
    <div class="d-flex justify-content-end">
        <button type="button" @onclick="ModalInstance.CancelAsync" class="btn btn-secondary">Cancel</button>
        <button type="submit" class="btn btn-primary">Increment</button>
    </div>
</EditForm>